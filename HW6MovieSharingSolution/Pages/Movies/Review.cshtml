@page
@model HW6MovieSharingSolution.Pages.Movies.ReviewModel
@{
    ViewData["Tite"] = "Review";
}

<h1>Approve Or Reject</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Movie.Id" />
        <input type="hidden" asp-for="Movie.UserRealmId" />
        <input type="hidden" asp-for="Movie.SharedUserRealmId" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Category)

            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Category)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Owner)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.OwnerEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.OwnerEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.SharedWithName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.SharedWithName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.SharedWithEmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.SharedWithEmailAddress)
            </dd>
        </dl>
        <div class="form-group">
            <label asp-for="Movie.SharedDate" class="control-label"></label>
            <input asp-for="Movie.SharedDate" class="form-control" />
            <span asp-validation-for="Movie.SharedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <form asp-page-handler="approve" method="post">
                <input type="submit" value="Approve" class="btn btn-success" />
            </form>
            <form asp-page-handler="reject" method="post">
                <input type="submit" value="Reject" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Library">Back to List</a>
</div>

